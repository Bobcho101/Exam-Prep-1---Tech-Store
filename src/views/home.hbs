<section class="products">
    
     <div class="container">
        <h2>Featured Products</h2>
        <div class="product-grid">
            {{#each devices}}
            <div class="product-item">
                <img
                    src="{{image}}">
                <h3>{{brand}} {{model}}</h3>
                <p>${{price}}</p>
                <a href="/details/{{id}}" class="btn">View Details</a>
            </div>
            {{/each}}
        </div>
    
</section>
