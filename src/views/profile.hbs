                    <img src="{{image}}"
                        alt="{{brand}}">
                    <p><strong>Brand:</strong> {{brand}}</p>
                    <p><strong>Model:</strong> {{model}}</p>
                    <a href="/details/{{id}}" class="btn">View Details</a>
